<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Buyer Info -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginBottom="12dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Address"
            android:layout_marginBottom="16dp"
            android:inputType="textPostalAddress" />

        <!-- Pricing Summary -->
        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: PKR 0.0"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvItemDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Discounts: PKR 0"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvShipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping: PKR 200"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: PKR 0.0"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Payment Method (Basic) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/paymentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/codOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:checked="true" />
        </RadioGroup>

        <!-- Place Order -->
        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order" />
    </LinearLayout>
</ScrollView>
